    { name:     "usbdev_aon"
      type:     "device"
      clock:    "clk_aon_i",
      reset:    "rst_aon_ni",
      pipeline: "false"
    }
  ]

  connections: {
    main: [ "pwrmgr", "rstmgr", "clkmgr", "pinmux_aon",
            "padctrl_aon", "usbdev_aon",
            "rbox_aon",
            // "dcd_aon", "aontimer_aon"
    ]
  }
